<launch>
    <!-- Chargement des paramètres ROS -->
    <arg name="world_name" default="$(find mon_package)/worlds/your_world.world"/>
    <arg name="sdf_file" default="$(find mon_package)/models/model.sdf"/>

    <arg name="use_sim_time" default="true"/>

    <!-- Lancer Gazebo -->
    <node name="gazebo" pkg="gazebo_ros" type="gazebo" respawn="false" output="screen">
        <param name="use_sim_time" value="$(arg use_sim_time)"/>
        <param name="world_name" value="$(arg world_name)"/>
    </node>

    <!-- Charger le modèle SDF -->
    <node name="spawn_model" pkg="gazebo_ros" type="spawn_model" output="screen" args="-file $(arg sdf_file) -sdf -model iris_demo"/>
</launch>

